{
  "tags": {
    "title": "List of tags",
    "description": "Tags which are used to color the comments. Changes require a restart of VS Code to take effect",
    "type": "array",
    "default": [
      {
        "tag": "!",
        "decoration": {
          "class": "alert-class",
          "type": "line"
        }
      },
      {
        "tag": "?",
        "decoration": {
          "class": "#ff2d00",
          "type": "line"
        }
      },
      {
        "tag": "todo",
        "decoration": {
          "class": "todo-class",
          "type": "line"
        }
      },
      {
        "tag": "*",
        "decoration": {
          "color": "highlight-class",
          "type": "line"
        }
      }
    ],
    "order": 1
  }
}
